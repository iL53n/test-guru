<h1>
  Question:
  <%= @question.body %>
</h1>

<h3>
  Test:
  <%= @question.test.title %>
</h3>

<h3>Answers</h3>
<%= link_to 'New answer', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>
<%= 'NO ANSWERS' if @question.answers.blank? %><br>
<%= link_to 'Back', admin_test_path(@question.test) %>
