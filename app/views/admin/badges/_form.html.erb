<%= form_with model: [:admin, @badge], local:true do |form| %>
  <p>
    <%= form.label :url_image %><br>
    <%= form.text_field :url_image %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.text_field :rule %>
  </p>

  <p>
    <%= form.submit class: 'btn btn-primary' %>
  </p>
<% end %>